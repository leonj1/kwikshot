# KwikShot Environment Configuration
# Copy this file to .env and customize as needed

# Development Server Configuration
# Port for the webpack development server (default: 3000)
DEV_PORT=3000

# Host for the development server (default: localhost)
# Use 0.0.0.0 to allow external connections
DEV_HOST=localhost

# Node environment (development, production)
NODE_ENV=development

# Production Configuration
# Port for production server (when using Docker)
PROD_PORT=3000

# Example configurations:
# For development on port 8080:
# DEV_PORT=8080
# DEV_HOST=localhost

# For development accessible from other machines:
# DEV_PORT=3000
# DEV_HOST=0.0.0.0

# For Docker development on custom port:
# DEV_PORT=5000
# DEV_HOST=0.0.0.0
